{
  "manifest_version": 2,
  "name": "cue-messaging",
  "version": "1.0",
  "description": "Messaging CUE Live",
  "browser_specific_settings": {
    "gecko": {
      "id": "gecko@cuelive.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*"
      ],
      "js": [
        "communicate.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ]
}
