<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/webViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </WebView>

        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:src="@drawable/close_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraLayout">
        <TextureView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:id="@+id/cameraTextureView"></TextureView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_below="@id/cameraTextureView"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/close_s"
                android:text="Close" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Video"
                android:background="@color/black"
                android:src="@drawable/record_start_s"
                android:layout_marginTop="20dp"
                android:id="@+id/videoButton"
                />




            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/image_cap_s"
                android:background="@color/black"
                android:layout_marginTop="20dp"
                android:text="Camera" />

        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>